[MeasureToday]
Measure=Plugin
UpdateRate=30
Plugin=Plugins\WebParser.dll
Url=http://xml.weather.com/weather/local/#Location#?cc=*&unit=#Unit#&dayf=1
RegExp="(?siU)<dnam>(.*),.*<tmp>(.*)</tmp>.*<t>(.*)</t>.*<icon>(.*)</icon>.*<day d="0" t="(.*)" dt=".*">.*<hi>(.*)</hi>.*<low>(.*)</low>.*<icon>.*<icon>(.*)</icon>"
;-----------------------------------------------------------------------------------------------------------
[MeasureWeekDays]
Measure=Plugin
Plugin=Plugins\WebParser.dll
Url=http://xml.weather.com/weather/local/#Location#?cc=*&unit=#Unit#&dayf=8
RegExp="(?siU)<day d="1" t="(.*)" .*<hi>(.*)</hi>.*<icon>(.*)</icon>.*<day d="2" t="(.*)" .*<hi>(.*)</hi>.*<icon>(.*)</icon>.*<day d="3" t="(.*)" .*<hi>(.*)</hi>.*<icon>(.*)</icon>.*<day d="4" t="(.*)" .*<hi>(.*)</hi>.*<icon>(.*)</icon>.*<day d="5" t="(.*)" .*<hi>(.*)</hi>.*<icon>(.*)</icon>.*<day d="6" t="(.*)" .*<hi>(.*)</hi>.*<icon>(.*)</icon>"
